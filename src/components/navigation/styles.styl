@import '~theme/variables'

.navigation
  line-height $font-size
  width 15em
  border-right 8px solid #444

  .folder
    flex 1 100%
    color #696B89
    margin ($scaler / 2) 0

  ul
    flex 1 100%
    margin 0
    padding 0
    list-style-type none
    li
      line-height $font-size
  a
    color #e8e8d3
    text-decoration none
    text-transform lowercase

  a:hover
    text-decoration underline
